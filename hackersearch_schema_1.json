{
  "add-field-type": [
    {
      "name": "text",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        }
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        }
      }
    }
  ],
  "add-field": [
    {
      "name": "search",
      "type": "text",
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "story_title",
      "type": "text",
      "uninvertible": false
    },
    {
      "name": "story_text",
      "type": "text",
      "uninvertible": false
    },
    {
      "name": "url",
      "type": "text",
      "stored": false,
      "uninvertible": false
    },
    {
      "name": "url_text",
      "type": "text",
      "large": true,
      "uninvertible": false
    },
    {
      "name": "comments.comment_text",
      "type": "text",
      "multiValued": true,
      "uninvertible": false
    }
  ],
  "add-copy-field": [
    {
      "source": "story_title",
      "dest": "search"
    },
    {
      "source": "story_text",
      "dest": "search"
    },
    {
      "source": "url",
      "dest": "search"
    },
    {
      "source": "url_text",
      "dest": "search"
    },
    {
      "source": "comments.comment_text",
      "dest": "search"
    }
  ]
}
