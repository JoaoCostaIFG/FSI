{
  "add-field-type": [
    {
      "name": "title",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.SynonymGraphFilterFactory",
            "synonyms": "/var/solr/data/hackersearch/mysynonyms.txt"
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          },
          {
            "class": "solr.PorterStemFilterFactory"
          },
          {
            "class": "solr.EnglishPossessiveFilterFactory"
          },
          {
            "class": "solr.EnglishMinimalStemFilterFactory"
          }
        ]
      }
    },
    {
      "name": "text",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "charFilter": [
          {
            "class": "solr.HTMLStripCharFilterFactory"
          }
        ],
        "tokenizer": {
          "class": "solr.UAX29URLEmailTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": false
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.SynonymGraphFilterFactory",
            "synonyms": "/var/solr/data/hackersearch/mysynonyms.txt"
          },
          {
            "class": "solr.FlattenGraphFilterFactory"
          },
          {
            "class": "solr.PorterStemFilterFactory"
          },
          {
            "class": "solr.EnglishPossessiveFilterFactory"
          },
          {
            "class": "solr.EnglishMinimalStemFilterFactory"
          },
          {
            "class": "solr.StopFilterFactory"
          }
        ]
      }
    },
    {
      "name": "url",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.PatternTokenizerFactory",
          "pattern": "([a-zA-Z0-9]*)\\..*",
          "group": 1
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    },
    {
      "name": "newsfilter",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.PatternTokenizerFactory",
          "pattern": "([a-zA-Z0-9]*\\.)*([a-zA-Z0-9]*)\\..*",
          "group": 2
        },
        "filters": [
          {
            "class": "solr.KeepWordFilterFactory",
            "words": "newssites.txt"
          },
          {
            "class": "solr.PatternReplaceFilterFactory",
            "pattern": ".+",
            "replacement": "news",
            "replace": "first"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.PatternReplaceFilterFactory",
            "pattern": "new$",
            "replacement": "news"
          },
          {
            "class": "solr.KeepWordFilterFactory",
            "words": "newsword.txt"
          }
        ]
      }
    },
    {
      "name": "category",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.KeywordTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      },
      "queryAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    },
    {
      "name": "suggestion_type",
      "class": "solr.TextField",
      "positionIncrementGap": 100,
      "indexAnalyzer": {
        "charFilter": [
          {
            "class": "solr.PatternReplaceCharFilterFactory",
            "pattern": "[^a-zA-Z0-9]",
            "replacement": " "
          }
        ],
        "tokenizer": {
          "class": "solr.WhitespaceTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.LowerCaseFilterFactory"
          }
        ]
      }
    },
    {
      "name": "spellField",
      "class": "solr.TextField",
      "indexAnalyzer": {
        "tokenizer": {
          "class": "solr.StandardTokenizerFactory"
        },
        "filters": [
          {
            "class": "solr.ASCIIFoldingFilterFactory",
            "preserveOriginal": true
          },
          {
            "class": "solr.LowerCaseFilterFactory"
          },
          {
            "class": "solr.EnglishPossessiveFilterFactory"
          }
        ]
      }
    },
    {
      "name": "singleToken",
      "class": "solr.StrField"
    },
    {
      "name": "date",
      "class": "solr.TrieDateField"
    },
    {
      "name": "int",
      "class": "solr.IntPointField"
    }
  ],
  "add-field": [
    {
      "name": "story_id",
      "type": "int",
      "indexed": false,
      "uninvertible": false
    },
    {
      "name": "story_author",
      "type": "singleToken",
      "uninvertible": false
    },
    {
      "name": "story_descendants",
      "type": "int",
      "docValues": true,
      "uninvertible": false
    },
    {
      "name": "story_score",
      "type": "int",
      "docValues": true,
      "uninvertible": false
    },
    {
      "name": "story_time",
      "type": "date",
      "docValues": true,
      "uninvertible": false
    },
    {
      "name": "story_title",
      "type": "title",
      "uninvertible": false
    },
    {
      "name": "story_text",
      "type": "text",
      "uninvertible": false
    },
    {
      "name": "story_type",
      "type": "category"
    },
    {
      "name": "url",
      "type": "url",
      "uninvertible": false
    },
    {
      "name": "url_text",
      "type": "text",
      "large": true,
      "uninvertible": false
    },
    {
      "name": "comments.comment_id",
      "type": "int",
      "indexed": false,
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "comments.comment_author",
      "type": "singleToken",
      "indexed": false,
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "comments.comment_descendants",
      "type": "int",
      "indexed": false,
      "docValues": true,
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "comments.comment_time",
      "type": "date",
      "indexed": false,
      "docValues": true,
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "comments.comment_text",
      "type": "text",
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "newssite_filter",
      "type": "newsfilter",
      "stored": false,
      "uninvertible": false
    },
    {
      "name": "search",
      "type": "text",
      "multiValued": true,
      "uninvertible": false
    },
    {
      "name": "spell",
      "type": "spellField"
    }
  ],
  "add-copy-field": [
    {
      "source": "url",
      "dest": "newssite_filter"
    },
    {
      "source": "story_type",
      "dest": "search"
    },
    {
      "source": "story_title",
      "dest": "search"
    },
    {
      "source": "story_text",
      "dest": "search"
    },
    {
      "source": "url",
      "dest": "search"
    },
    {
      "source": "url_text",
      "dest": "search"
    },
    {
      "source": "comments.comment_text",
      "dest": "search"
    },
    {
      "source": "story_title",
      "dest": "spell"
    }
  ]
}
